{
  "name": "nest-monolit-starter",
  "version": "1.0.0",
  "description": "Production-ready NestJS monolith starter template for projects",
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main.js",
    "migration:generate": "sequelize-cli migration:generate --name",
    "migration:run": "sequelize-cli db:migrate",
    "migration:revert": "sequelize-cli db:migrate:undo",
    "seed:run": "sequelize-cli db:seed:all",
    "lint": "eslint \"{src,test}/**/*.ts\" --max-warnings=0",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:unit": "jest --config test/jest-unit.json",
    "test:unit:watch": "jest --config test/jest-unit.json --watch",
    "test:unit:cov": "jest --config test/jest-unit.json --coverage",
    "test:e2e": "jest --config test/jest-e2e.json",
    "test:e2e:watch": "jest --config test/jest-e2e.json --watch",
    "prepare": "husky"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.645.0",
    "@aws-sdk/s3-request-presigner": "^3.645.0",
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/sequelize": "^11.0.0",
    "@nestjs/swagger": "^11.0.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "connect-redis": "^7.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express-session": "^1.18.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.4.1",
    "luxon": "^3.5.0",
    "mysql2": "^3.11.3",
    "nestjs-i18n": "^10.5.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sequelize": "^6.37.3",
    "sequelize-typescript": "^2.1.6",
    "uuid": "^11.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.12",
    "@types/luxon": "^3.4.1",
    "@types/node": "^22.7.4",
    "@types/passport-jwt": "^3.0.9",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.3.3",
    "sequelize-cli": "^6.6.2",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.46.4"
  },
  "engines": {
    "node": ">=23.0.0"
  },
  "lint-staged": {
    "{src,test}/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "eslint --max-warnings=0"
    ]
  }
}
